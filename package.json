{
  "name": "@drorgl/sitemap-builder",
  "version": "1.0.1",
  "description": "library for building sitemaps and sitemap index",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "lint": "eslint src test",
    "dryrun": "tsc -noEmit",
    "build": "rimraf ./dist && tsc",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "test:ci": "mocha --reporter mocha-junit-reporter -r ts-node/register test/**/*.spec.ts",
    "precommit": "npm run lint && npm run dryrun && npm run test",
    "coverage": "rimraf ./coverage && nyc mocha -r ts-node/register -r source-map-support/register --ui bdd test/**/*.spec.ts"
  },
  "keywords": [],
  "author": "Dror Gluska",
  "license": "MIT",
  "dependencies": {
    "escape-html": "^1.0.3",
    "tmp-promise": "^3.0.3"
  },
  "devDependencies": {
    "nyc": "^15.1.0",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/escape-html": "^1.0.1",
    "@types/libxmljs": "^0.18.7",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.24",
    "@types/xml2js": "^0.4.9",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.0.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "libxmljs": "github:fishilico/libxmljs",
    "mocha": "^9.2.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "xml2js": "^0.4.23"
  }
}
